{
    "comment": "Sample component configuration",
    "components": {
        "Welcome Component": {
            "window": {
                "url": "$applicationRoot/components/welcome/welcome.html",
                "frame": false,
                "resizable": true,
                "autoShow": true,
                "top": "center",
                "left": "center",
                "width": 400,
                "height": 370
            },
            "component": {
                "inject": false,
                "spawnOnStartup": false
            },
            "foreign": {
                "services": {
                    "dockingService": {
                        "canGroup": true,
                        "isArrangable": true
                    }
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": true
                    },
                    "Window Manager": {
                        "showLinker": false,
                        "FSBLHeader": true,
                        "persistWindowState": true
                    },
                    "Toolbar": {
                        "iconClass": "welcome"
                    }
                }
            }
        },
        "Notepad": {
            "window": {
                "id": "Notepad",
                "native": true,
                "path": "notepad.exe",
                "url": "",
                "defaultHeight": 600,
                "autoShow": true,
                "alwaysOnTop": false,
                "resizable": true,
                "showTaskbarIcon": false,
                "contextMenu": true,
                "addToWorkspace": true
            },
            "component": {
                "spawnOnHotkey": [
                    "ctrl",
                    "alt",
                    "n"
                ]
            },
            "foreign": {
                "services": {
                    "workspaceService": {
                        "isArrangable": true
                    }
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": true
                    },
                    "Window Manager": {
                        "persistWindowState": false,
                        "FSBLHeader": true
                    },
                    "Toolbar": {
                        "iconURL": "$applicationRoot/components/assets/img/notepad.png"
                    }
                }
            }
        },
        "Getting Started Tutorial": {
            "window": {
                "url": "https://www.chartiq.com/tutorials/?slug=finsemble-seed-project",
                "height": 800,
                "width": 1000
            },
            "component": {
                "spawnOnStartup": false
            },
            "foreign": {
                "services": {
                    "dockingService": {
                        "isArrangable": true
                    }
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": false
                    },
                    "Window Manager": {
                        "persistWindowState": true,
                        "FSBLHeader": true,
                        "showLinker": false
                    }
                }
            }
        },
        "Finsemble Documentation": {
            "window": {
                "url": "http://documentation.chartiq.com/finsemble",
                "left": "center",
                "top": "center",
                "height": 800,
                "width": 1000
            },
            "component": {},
            "foreign": {
                "services": {
                    "dockingService": {
                        "isArrangable": true
                    }
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": false
                    },
                    "Window Manager": {
                        "persistWindowState": false,
                        "FSBLHeader": true,
                        "showLinker": false
                    }
                }
            }
        },
        "defaultAuthentication": {
            "window": {
                "url": "$applicationRoot/components/authentication/defaultAuthentication.html",
                "top": "center",
                "left": "center",
                "width": 358,
                "height": 458,
                "ephemeral": true,
                "options": {
                    "autoShow": false
                }
            },
            "component": {
                "neededClients": [
                    "LauncherClient",
                    "AuthenticationClient",
                    "StorageClient"
                ],
                "category": "system"
            },
            "foreign": {
                "services": {
                    "dockingService": {
                        "isArrangable": false
                    }
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": false
                    },
                    "Window Manager": {
                        "FSBLHeader": false,
                        "persistWindowState": false
                    }
                }
            }
        },
        "Linker Tester": {
            "window": {
                "url": "$applicationRoot/components/linkerTester/linkerTester.html",
                "frame": false,
                "resizable": false,
                "autoShow": true,
                "top": "center",
                "left": "center",
                "width": 250,
                "height": 550
            },
            "component": {
                "inject": false
            },
            "foreign": {
                "services": {
                    "dockingService": {
                        "canGroup": true,
                        "isArrangable": true
                    }
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": true
                    },
                    "Window Manager": {
                        "title": "Linker Tester",
                        "showLinker": true,
                        "FSBLHeader": true,
                        "persistWindowState": true
                    },
                    "Toolbar": {
                        "iconClass": "linkerTester"
                    }
                }
            }
        }
    }
}
